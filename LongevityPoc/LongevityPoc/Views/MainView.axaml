<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LongevityPoc.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LongevityPoc.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Grid RowDefinitions="Auto,*,Auto">
        
        <Label Content="Warriors of Immortals"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Row="0"
               FontSize="35"/>
        
        <TreeDataGrid Grid.Row="1"
                  Margin="20" Source="{Binding Source}" 
                  BorderThickness="1" BorderBrush="Gray">
        </TreeDataGrid>
        
        <Panel Height="200" Grid.Row="2" Background="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Text="Advertise here!" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Panel>
    </Grid>
</UserControl>
